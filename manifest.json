{
    "manifest_version": 3,
    "name": "Web Simplifier",
    "description": "Simplify web content using OpenAI",
    "version": "1.0",
    "options_page": "options.html",
    "action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extensions.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["style.css"],
            "matches": ["<all_urls>"]
        }
    ]
}